{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"]
    },
    "outDir": "./dist",
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "declarationMap": false,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": ["node_modules", "./dist", "./docs"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/global.d.ts"
  ]
}
